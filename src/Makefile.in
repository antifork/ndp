CC = @CC@
CFLAGS = @CFLAGS@ -I../include  # -include /usr/include/almepro.h 
LIBS = @LIBS@ # -lalmepro

OBJS = ndp.o socket.o util.o md5.o irc.o passwd.o \
command.o parser.o messager.o ctrl.o ndp.par.o parseconf.o cmpt.o time.o usage.o @ALLOCA@ @GNU_ADDON_OBJ@


OBJS2 = md5.o passwd_gen.o

all:ndp md5
.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

ndp:$(OBJS)
	$(CC) -o ../ndp $(OBJS) $(LIBS)
	@echo "ndp done."

md5:$(OBJS2)
	$(CC) -o../passwd_ndp $(OBJS2) $(LIBS)
	@echo "passwd_ndp done."
